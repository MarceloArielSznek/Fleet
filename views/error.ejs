<%- include('partials/header') %>

<div class="card">
  <div class="card-header">
    <h2>Error</h2>
  </div>
  <div class="card-body">
    <p class="text-center"><%= message %></p>
    <% if (error) { %>
      <div class="mt-2">
        <h3>Error details:</h3>
        <pre><%= error.stack %></pre>
      </div>
    <% } %>
    <div class="mt-2 text-center">
      <a href="/" class="btn btn-primary">Return to homepage</a>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 