<%- include('../partials/header') %>

<div class="page-header">
  <h2>Vehicles</h2>
  <div class="page-actions">
    <a href="/vehicles/create" class="btn btn-success">
      <i class="fas fa-plus"></i> New Vehicle
    </a>
  </div>
</div>

<% if (vehicles.length === 0) { %>
  <div class="card">
    <div class="card-body text-center">
      <p>No vehicles registered.</p>
      <a href="/vehicles/create" class="btn btn-primary mt-2">
        <i class="fas fa-plus-circle"></i> Register first vehicle
      </a>
    </div>
  </div>
<% } else { %>
  <div class="card">
    <div class="card-header">
      <h3>Vehicle List</h3>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>License Plate</th>
              <th>Brand</th>
              <th>Model</th>
              <th>Year</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% vehicles.forEach(vehicle => { %>
              <tr>
                <td><%= vehicle.plate %></td>
                <td><%= vehicle.brand %></td>
                <td><%= vehicle.model %></td>
                <td><%= vehicle.year %></td>
                <td>
                  <% if (vehicle.status === 'active') { %>
                    <span class="status-badge status-active">Active</span>
                  <% } else if (vehicle.status === 'maintenance') { %>
                    <span class="status-badge status-maintenance">Maintenance</span>
                  <% } else { %>
                    <span class="status-badge status-retired">Retired</span>
                  <% } %>
                </td>
                <td class="action-cell">
                  <a href="/vehicles/<%= vehicle.id %>" class="btn-icon text-primary" title="View details">
                    <i class="fas fa-eye"></i>
                  </a>
                  <a href="/vehicles/<%= vehicle.id %>/edit" class="btn-icon text-warning" title="Edit">
                    <i class="fas fa-edit"></i>
                  </a>
                  <form action="/vehicles/<%= vehicle.id %>/delete" method="POST" style="display: inline;">
                    <button type="submit" class="btn-icon text-danger" title="Delete" 
                            onclick="return confirm('Are you sure you want to delete this vehicle?')">
                      <i class="fas fa-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% } %>

<%- include('../partials/footer') %> 