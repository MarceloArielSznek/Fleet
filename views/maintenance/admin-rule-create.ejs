<%- include('../partials/header') %>

<div class="page-header">
  <h2>Create New Maintenance Rule</h2>
  <div class="page-actions">
    <a href="/maintenance/admin" class="btn btn-secondary">
      <i class="fas fa-arrow-left"></i> Back to Admin
    </a>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h3>Rule Details</h3>
  </div>
  <div class="card-body">
    <form action="<%= typeof rule !== 'undefined' ? '/maintenance/admin/rules/' + rule.id + '/edit' : '/maintenance/admin/rules/create' %>" method="POST">
      <div class="form-row">
        <div class="form-col">
          <div class="form-group">
            <label for="ruleName" class="form-label">Rule Name</label>
            <input type="text" id="ruleName" name="name" class="form-control" required 
                   placeholder="e.g. Standard Oil Change"
                   value="<%= typeof rule !== 'undefined' ? rule.name : '' %>">
            <small class="text-muted">A descriptive name for this maintenance rule</small>
          </div>
        </div>
        
        <div class="form-col">
          <div class="form-group">
            <label for="serviceType" class="form-label">Service Type</label>
            <select id="serviceType" name="serviceType" class="form-control" required>
              <option value="" disabled <%= typeof rule === 'undefined' ? 'selected' : '' %>>Select a service type</option>
              <optgroup label="Standard Services">
                <option value="oil_change" <%= typeof rule !== 'undefined' && rule.serviceType === 'oil_change' ? 'selected' : '' %>>Oil Change</option>
                <option value="tire_rotation" <%= typeof rule !== 'undefined' && rule.serviceType === 'tire_rotation' ? 'selected' : '' %>>Tire Rotation</option>
                <option value="brake_service" <%= typeof rule !== 'undefined' && rule.serviceType === 'brake_service' ? 'selected' : '' %>>Brake Service</option>
                <option value="engine_tuning" <%= typeof rule !== 'undefined' && rule.serviceType === 'engine_tuning' ? 'selected' : '' %>>Engine Tuning</option>
                <option value="battery_replacement" <%= typeof rule !== 'undefined' && rule.serviceType === 'battery_replacement' ? 'selected' : '' %>>Battery Replacement</option>
                <option value="air_filter" <%= typeof rule !== 'undefined' && rule.serviceType === 'air_filter' ? 'selected' : '' %>>Air Filter Replacement</option>
                <option value="general_inspection" <%= typeof rule !== 'undefined' && rule.serviceType === 'general_inspection' ? 'selected' : '' %>>General Inspection</option>
              </optgroup>
              <% if (customServices && customServices.length > 0) { %>
                <optgroup label="Custom Services">
                  <% customServices.forEach(service => { %>
                    <option value="<%= service.id %>" <%= typeof rule !== 'undefined' && rule.serviceType === service.id ? 'selected' : '' %>><%= service.name %></option>
                  <% }) %>
                </optgroup>
              <% } %>
            </select>
          </div>
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-col">
          <div class="form-group">
            <label for="conditionType" class="form-label">Condition Type</label>
            <select id="conditionType" name="conditionType" class="form-control" required>
              <option value="mileage" <%= typeof rule !== 'undefined' && rule.conditionType === 'mileage' ? 'selected' : '' %>>Mileage-based</option>
              <option value="time" <%= typeof rule !== 'undefined' && rule.conditionType === 'time' ? 'selected' : '' %>>Time-based</option>
              <option value="combined" <%= typeof rule !== 'undefined' && rule.conditionType === 'combined' ? 'selected' : '' %>>Combined (Mileage or Time)</option>
            </select>
          </div>
        </div>
        
        <div class="form-col condition-value mileage-condition">
          <div class="form-group">
            <label for="mileageValue" class="form-label">Mileage Interval (km)</label>
            <input type="number" id="mileageValue" name="mileageValue" class="form-control" 
                   placeholder="e.g. 10000" min="1" required
                   value="<%= typeof rule !== 'undefined' && rule.conditionType === 'mileage' ? rule.conditionValue : (typeof rule !== 'undefined' && rule.conditionType === 'combined' ? rule.conditionValue.mileage : '') %>">
            <small class="text-muted">Trigger maintenance every X kilometers</small>
          </div>
        </div>
        
        <div class="form-col condition-value time-condition" style="display: none;">
          <div class="form-group">
            <label for="timeValue" class="form-label">Time Interval (days)</label>
            <input type="number" id="timeValue" name="timeValue" class="form-control" 
                   placeholder="e.g. 180" min="1"
                   value="<%= typeof rule !== 'undefined' && rule.conditionType === 'time' ? rule.conditionValue : (typeof rule !== 'undefined' && rule.conditionType === 'combined' ? rule.conditionValue.time : '') %>">
            <small class="text-muted">Trigger maintenance every X days</small>
          </div>
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-col">
          <div class="form-group">
            <label for="priority" class="form-label">Priority</label>
            <select id="priority" name="priority" class="form-control">
              <option value="low" <%= typeof rule !== 'undefined' && rule.priority === 'low' ? 'selected' : '' %>>Low</option>
              <option value="medium" <%= typeof rule === 'undefined' || (typeof rule !== 'undefined' && rule.priority === 'medium') ? 'selected' : '' %>>Medium</option>
              <option value="high" <%= typeof rule !== 'undefined' && rule.priority === 'high' ? 'selected' : '' %>>High</option>
            </select>
            <small class="text-muted">Priority affects notifications and scheduling suggestions</small>
          </div>
        </div>
        
        <div class="form-col">
          <div class="form-group">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" class="form-control" rows="2"
                      placeholder="Optional description of this rule"><%= typeof rule !== 'undefined' ? rule.description : '' %></textarea>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <label class="form-label">Apply to Specific Vehicles</label>
        <div class="vehicles-checkbox-container">
          <div class="checkbox-option all-vehicles-option">
            <input type="checkbox" id="allVehicles" name="allVehicles" class="form-check-input" 
                   <% if (typeof rule === 'undefined' || !rule || !rule.vehicleIds || rule.vehicleIds.length === 0) { %>checked<% } %>>
            <label for="allVehicles" class="form-check-label">All Vehicles</label>
          </div>
          
          <div class="specific-vehicles" <% if (typeof rule === 'undefined' || !rule || !rule.vehicleIds || rule.vehicleIds.length === 0) { %>style="display: none;"<% } %>>
            <% if (vehicles && vehicles.length > 0) { %>
              <div class="vehicles-checkbox-grid">
                <% vehicles.forEach(vehicle => { %>
                  <div class="checkbox-option vehicle-option">
                    <input type="checkbox" id="vehicle_<%= vehicle.id %>" name="vehicleIds" 
                           value="<%= vehicle.id %>" class="form-check-input vehicle-checkbox"
                           <% if (typeof rule !== 'undefined' && rule && rule.vehicleIds && rule.vehicleIds.includes(vehicle.id)) { %>checked<% } %>>
                    <label for="vehicle_<%= vehicle.id %>" class="form-check-label">
                      <div class="vehicle-info-compact">
                        <div class="vehicle-header">
                          <% if (vehicle.name) { %>
                            <span class="vehicle-nickname"><%= vehicle.name %></span>
                          <% } %>
                          <span class="vehicle-plate-tag"><%= vehicle.plate %></span>
                        </div>
                        <div class="vehicle-name-full">
                          <span class="vehicle-model"><%= vehicle.brand %> <%= vehicle.model %></span>
                          <span class="year"><%= vehicle.year %></span>
                        </div>
                      </div>
                    </label>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <p class="text-muted">No vehicles available in the fleet.</p>
            <% } %>
          </div>
        </div>
        <small class="text-muted">Select specific vehicles or choose "All Vehicles" to apply to the entire fleet</small>
      </div>
      
      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="isActive" name="isActive" 
              <%= typeof rule === 'undefined' || (typeof rule !== 'undefined' && rule.isActive) ? 'checked' : '' %>>
        <label class="form-check-label" for="isActive">Activate rule immediately</label>
      </div>
      
      <div class="form-actions">
        <button type="submit" class="btn btn-primary"><%= typeof rule !== 'undefined' ? 'Update Rule' : 'Create Rule' %></button>
        <a href="/maintenance/admin" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const conditionTypeSelect = document.getElementById('conditionType');
    const mileageCondition = document.querySelector('.mileage-condition');
    const timeCondition = document.querySelector('.time-condition');
    const mileageValueInput = document.getElementById('mileageValue');
    const timeValueInput = document.getElementById('timeValue');
    
    // Control de mostrar/ocultar campos según tipo de condición
    function updateConditionFields() {
      const selectedValue = conditionTypeSelect.value;
      
      if (selectedValue === 'mileage') {
        mileageCondition.style.display = '';
        timeCondition.style.display = 'none';
        mileageValueInput.required = true;
        timeValueInput.required = false;
      } else if (selectedValue === 'time') {
        mileageCondition.style.display = 'none';
        timeCondition.style.display = '';
        mileageValueInput.required = false;
        timeValueInput.required = true;
      } else if (selectedValue === 'combined') {
        mileageCondition.style.display = '';
        timeCondition.style.display = '';
        mileageValueInput.required = true;
        timeValueInput.required = true;
      }
    }
    
    // Toggle para "Todos los vehículos" vs "Vehículos específicos"
    const allVehiclesCheckbox = document.getElementById('allVehicles');
    const specificVehiclesContainer = document.querySelector('.specific-vehicles');
    const vehicleCheckboxes = document.querySelectorAll('.vehicle-checkbox');
    
    if (allVehiclesCheckbox && specificVehiclesContainer) {
      allVehiclesCheckbox.addEventListener('change', function() {
        if (this.checked) {
          specificVehiclesContainer.style.display = 'none';
          vehicleCheckboxes.forEach(checkbox => {
            checkbox.checked = false;
          });
        } else {
          specificVehiclesContainer.style.display = '';
        }
      });
      
      // Si se marca algún vehículo específico, desmarcar "Todos los vehículos"
      vehicleCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
          if (this.checked) {
            allVehiclesCheckbox.checked = false;
          }
          
          // Si no hay ningún vehículo específico seleccionado, marcar "Todos los vehículos"
          const anyVehicleSelected = Array.from(vehicleCheckboxes).some(cb => cb.checked);
          if (!anyVehicleSelected) {
            allVehiclesCheckbox.checked = true;
            specificVehiclesContainer.style.display = 'none';
          }
        });
      });
    }
    
    conditionTypeSelect.addEventListener('change', updateConditionFields);
    updateConditionFields(); // Initialize on page load
  });
</script>

<style>
